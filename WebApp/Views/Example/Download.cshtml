@model WebApp.Models.ExampleDownloadModel
@{
    ViewBag.Title = "Download";
}

<div style="height: 78.3vh;">
    <div class="mt-3 pb-3 container" style="border: 3px solid rgba(50, 50, 50, 0.3); border-radius: 6px;">
        <div class="row ">
            <div class="col-md-6 text-center my-auto mx-auto">
                <h1 class="mt-3">@ViewBag.Title</h1>
            </div>
        </div>

        @if (!string.IsNullOrWhiteSpace(Model.Response))
        {
            <div class="row justify-content-center mt-3">
                <div class="col-md-10">
                    <div class="alert alert-danger" role="alert">
                        <h4 class="alert-heading">Error</h4>
                        <p>@Model.Response</p>
                    </div>
                </div>
            </div>
        }
        else if (Model.MessageVO != null)
        {
            <div class="row justify-content-center mt-3">
                <div class="col-md-10">
                    <div class="alert alert-secondary" role="alert">
                        <h4 class="alert-heading">@Model.MessageVO.Id - @Model.MessageVO.Title</h4>
                        @foreach (var messages in Model.MessageVO.Messages)
                        {
                            <p>@messages</p>
                        }
                    </div>

                </div>
            </div>
        }
        else
        {
            <div class="row justify-content-center mt-3">
                <div class="col-md-10">
                    <div class="alert alert-primary" role="alert">
                        <h4 class="alert-heading">Sin proceso trabajado</h4>
                        <p>No se han realizado trabajos internos</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

